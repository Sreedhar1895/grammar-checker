{
  "manifest_version": 3,
  "name": "Grammar Checker",
  "version": "1.0.0",
  "description": "Claude-powered grammar checker. Select text and press Ctrl+Shift+G (or Cmd+Shift+G on Mac).",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["https://api.anthropic.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "check-grammar": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Check grammar of selected text"
    }
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grammar Checker"
  }
}
